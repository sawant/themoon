<!DOCTYPE html>
<html>
  <head>
    <title>Themoon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="container">
  	<% if notice.present? %>
			<p class="alert alert-info"​><%= notice %></p>
		<% end %>
		<% if alert.present? %>
			​<p class="alert alert-danger"​><%= alert %></p>
		<% end %>
    <%= yield %>
  </body>
</html>
